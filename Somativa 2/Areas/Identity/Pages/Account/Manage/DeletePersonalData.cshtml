@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Excluir conta";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<diV style="justify-content:center;margin-top:120px">
<h3 class="text-center">@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>A exclusão desses dados removerá permanentemente sua conta e não poderá ser recuperada.</strong>
    </p>
</div>

<div >
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">Excluir dados e encerrar minha conta</button>
    </form>
</div>
</diV>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
