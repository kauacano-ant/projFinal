@page
@model RegisterModel
@{
    ViewData["Title"] = "CADASTRAR";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8" style="margin-top:90px">
            <h1 style="text-align:center; font-weight:bold">@ViewData["Title"]</h1>

            <h4 class="text-center">Informações pessoais - Necessário para prescrição digital</h4>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="d-flex row mb-3 g-3">
                    <div class="col form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Email" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Senha" />
                        <label asp-for="Input.Password">Senha</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Senha" />
                        <label asp-for="Input.ConfirmPassword">Confirme sua Senha</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">CADASTRAR</button>

                <div class="form-group mt-3 text-center" style="margin-bottom:-40px">
                    <a href="@Url.Page("/Account/Login")">Já tem conta? Faça login</a>
                </div>
            </form>
        </div>
        <div class="col-lg-6 d-none d-lg-block" style="position:relative; height:622px;">
            <img src="~/img/Doctor1.jpg" style="margin-left:6.7%;margin-top:-50px;margin-bottom:-63px;" alt="Imagem médica" />
        </div>
    </div>
</div>

<style>
    h4 {
        font-size: 23px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
        color: #001C42;
    }

    #registerSubmit {
        background-color: #007bff;
        border: none;
        font-size: 1.2rem;
        padding: 10px;
        margin-top: 15px;
    }

        #registerSubmit:hover {
            background-color: #0056b3;
        }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ced4da;
    }

    .form-floating > label {
        padding-left: 15px;
    }

    .form-floating > .form-control {
        padding: 20px 10px;
    }

    .form-floating {
        margin-bottom: 20px;
    }

    .form-group a {
        color: #007bff;
    }

        .form-group a:hover {
            color: #0056b3;
            text-decoration: underline;
        }
</style>
