<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirmar exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Tem certeza de que deseja excluir este item?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-action="Delete" method="post">
                    <input type="hidden" id="deleteId" name="id" value="" />
                    <button type="submit" class="btn btn-danger">Excluir </button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="createCategModal" tabindex="-1" aria-labelledby="createCategModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createCategModalLabel">Criar Nova Categoria</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <!-- Configura o formulário para enviar os dados para a ação Create -->
            <form asp-action="Create" asp-controller="Categs" method="post" enctype="multipart/form-data" id="formCreateCategModal">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="createNome" class="form-label">Nome da Categoria</label>
                        <input type="text" class="form-control" id="createNome" name="Nome" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <input type="submit" value="Criar" class="btn btn-primary w-25 m-2" />
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="editCategModal" tabindex="-1" aria-labelledby="editCategModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editCategModalLabel">Editar Categoria</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <!-- Formulário configurado para enviar os dados para a ação Edit -->
            <form asp-action="Edit" asp-controller="Categs" method="post" id="formEditCategModal">
                <input type="hidden" id="editCategId" name="CategId" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="editNome" class="form-label">Nome da Categoria</label>
                        <input type="text" class="form-control" id="editNome" name="Nome" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <input type="submit" value="Salvar" class="btn btn-primary w-25 m-2" />
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Botão de ativação do modal (pode ser usado dinamicamente) -->


<!-- Scripts -->
    <script>
        function openEditModal(id, nome) {
            // Preenche os campos do modal com os dados da categoria
            $("#editCategId").val(id);
            $("#editNome").val(nome);

            // Abre o modal
            $("#editCategModal").modal('show');
        }

        $(document).ready(function () {
            // Intercepta o envio do formulário para usar AJAX
            $("#formEditCategModal").submit(function (event) {
                event.preventDefault(); // Evita o envio padrão do formulário

                const form = $(this);
                const actionUrl = `${form.attr("action")}/${$("#editCategId").val()}`;
                const formData = form.serialize();

                $.post(actionUrl, formData)
                    .done(function () {
                        // Fechar o modal e recarregar a página
                        $("#editCategModal").modal('hide');
                        location.reload();
                    })
                    .fail(function () {
                        alert("Erro ao editar a categoria. Tente novamente.");
                    });
            });
        });
    </script>

<script>
    $(document).ready(function () {
        // Intercepta o envio do formulário para usar AJAX
        $("#formCreateCategModal").submit(function (event) {
            event.preventDefault(); // Evita o envio padrão do formulário

            const form = $(this);
            const actionUrl = form.attr("action");
            const formData = new FormData(this);

            $.ajax({
                url: actionUrl,
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function () {
                    // Fechar o modal e recarregar a página para refletir os dados
                    $("#createCategModal").modal('hide');
                    location.reload();
                },
                error: function () {
                    alert("Erro ao criar a categoria. Tente novamente.");
                }
            });
        });
    });
</script>
<script>
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var id = button.getAttribute('data-id');
        var deleteIdInput = deleteModal.querySelector('#deleteId');
        deleteIdInput.value = id;
    });
</script>