<script>
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var id = button.getAttribute('data-id');
        var deleteIdInput = deleteModal.querySelector('#deleteId');
        deleteIdInput.value = id;
    });
    var detailsModal = document.getElementById('detailsModal');
    detailsModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var nome = button.getAttribute('data-nome');
        var telefone = button.getAttribute('data-telefone');
        var email = button.getAttribute('data-email');
        var endereco = button.getAttribute('data-endereco');
        var especialidade = button.getAttribute('data-especialidade');
        var imgSrc = button.getAttribute('data-img');
        var descricao = button.getAttribute('data-descricao');



        detailsModal.querySelector('#consultorioNome').textContent = nome;
        detailsModal.querySelector('#consultorioTelefone').textContent = telefone;
        detailsModal.querySelector('#consultorioEmail').textContent = email;
        detailsModal.querySelector('#consultorioEndereco').textContent = endereco;
        detailsModal.querySelector('#consultorioEspecialidade').textContent = especialidade;
        detailsModal.querySelector('#consultorioDescricao').textContent = descricao;
        detailsModal.querySelector('#consultorioImagem').src = imgSrc;
    });
    var editConsultorioModal = document.getElementById('editConsultorioModal');
    editConsultorioModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        document.getElementById('editConsultorioId').value = button.getAttribute('data-id');
        document.getElementById('editNome').value = button.getAttribute('data-nome');
        document.getElementById('editEndereco').value = button.getAttribute('data-endereco');
        document.getElementById('editTelefone').value = button.getAttribute('data-telefone');
        document.getElementById('editEspecialidade').value = button.getAttribute('data-especialidade');
        document.getElementById('editEmail').value = button.getAttribute('data-email');
        document.getElementById('editCategId').value = button.getAttribute('data-categid');
        document.getElementById('editDescricao').value = button.getAttribute('data-descricao');
        document.getElementById('editImg').value = "";
    });
    document.addEventListener('DOMContentLoaded', function () {
        const createConsultorioModal = document.getElementById('createConsultorioModal');
        const formCreateConsultorioModal = document.getElementById('formCreateConsultorioModal');

        // Quando a modal é aberta, reseta o formulário
        createConsultorioModal.addEventListener('show.bs.modal', function () {
            formCreateConsultorioModal.reset();
        });

        // Quando o formulário é enviado, enviar os dados via AJAX
        formCreateConsultorioModal.addEventListener('submit', function (event) {
            event.preventDefault(); // Evita o envio padrão do formulário

            // Envio do formulário via AJAX
            const formData = new FormData(formCreateConsultorioModal);

            fetch('/ConsultoriosModels/Create', {
                method: 'POST',
                body: formData
            })
                .then(response => {
                    if (response.ok) {
                        // Fechar a modal após o envio bem-sucedido
                        const modalInstance = bootstrap.Modal.getInstance(createConsultorioModal);
                        modalInstance.hide();

                        // Atualizar a lista ou redirecionar
                        location.reload();
                    } else {
                        // Tratar erro
                        alert("Erro ao criar o consultório.");
                    }
                })
                .catch(error => {
                    console.error('Erro:', error);
                    alert("Ocorreu um erro ao enviar o formulário.");
                });
        });
    });

</script>