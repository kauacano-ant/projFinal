            <div class="modal-header">
                <h5 class="modal-title" id="editConsultorioModalLabel">Editar Consultório</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Edit" asp-controller="ConsultoriosModels" method="post" enctype="multipart/form-data" id="formEditConsultorioModal">
                <div class="modal-body">
                    <input type="hidden" id="editConsultorioId" name="ConsultorioId" />

                    <div class="mb-3">
                        <label for="editNome" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="editNome" name="Nome" required />
                    </div>
                    <div class="mb-3">
                        <label for="editEndereco" class="form-label">Endereço</label>
                        <input type="text" class="form-control" id="editEndereco" name="Endereco" required />
                    </div>
                    <div class="mb-3">
                        <label for="editTelefone" class="form-label">Telefone</label>
                        <input type="text" class="form-control" id="editTelefone" name="Telefone" required />
                    </div>
                    <div class="mb-3">
                        <label for="editEspecialidade" class="form-label">Especialidade</label>
                        <input type="text" class="form-control" id="editEspecialidade" name="Especialidade" required />
                    </div>
                    <div class="mb-3">
                        <label for="editEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="editEmail" name="Email" required />
                    </div>
                    <div class="mb-3">
                        <label for="editCategId" class="form-label">Categoria</label>
                        <select class="form-control" id="editCategId" name="CategId">
                            <!-- Exemplo de preenchimento dinâmico de categorias -->
                            @foreach (var item in categ)
                            {
                                <option value="@item.CategId">@item.Nome</option>
                            }

                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="editDescricao" class="form-label">Descrição</label>
                        <textarea class="form-control" id="editDescricao" name="Descricao"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="editImg" class="form-label">Nova Imagem</label>
                        <input type="file" class="form-control" id="editImg" name="imgUp" accept="image/*" />
                    </div>
