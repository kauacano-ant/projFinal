@model Somativa_2.Models.PacientesModel

@{
	ViewData["Title"] = "Delete";
}

<div class="row m-5" >
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="PlanodeSaudeId" />



	<div class="d-flex justify-content-center">
		<form asp-action="Create" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div style="width:700px">
				<div class="d-flex ">
					<div class="" style="margin-left:18px">
						<img src="~/img/@Model.img" alt="Imagem da Notícia" style="width: 174px ; height:174px ;border-radius:10px" />
					</div>
					<div class="m-1 w-50">
						<div class="form-group m-2">
							<label asp-for="Nome" class="control-label"></label>
							<input asp-for="Nome" class="form-control" readonly style="height:40px;background-color:white" />
							<span asp-validation-for="Nome" class="text-danger"></span>
						</div>
						<div class="form-group m-2">
							<label asp-for="CPF" class="control-label"></label>
							<input asp-for="CPF" class="form-control" readonly style="height:40px; background-color:white" />
							<span asp-validation-for="CPF" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class=" m-2 w-100">
					<div class="form-group w-75 m-2">
						<label asp-for="RG" class="control-label"></label>
						<input asp-for="RG" class="form-control" readonly style="height:40px ;background-color:white" />
						<span asp-validation-for="RG" class="text-danger"></span>
					</div>
					<div class="form-group w-75 m-2">
						<label asp-for="Data_de_nascimento" class="control-label"></label>
						<input asp-for="Data_de_nascimento" class="form-control" readonly style="height:40px ;background-color:white " />
						<span asp-validation-for="Data_de_nascimento" class="text-danger"></span>
					</div>
					<div class="form-group w-75 m-2">
						<label asp-for="Endereco" class="control-label"></label>
						<input asp-for="Endereco" class="form-control" readonly style="height:40px ;background-color:white" />
						<span asp-validation-for="Endereco" class="text-danger"></span>
					</div>
					<div class="form-group w-75 m-2">
						<label asp-for="Telefone" class="control-label"></label>
						<input asp-for="Telefone" class="form-control" readonly style="height:40px; background-color:white" />
						<span asp-validation-for="Telefone" class="text-danger"></span>
					</div>
					<div class="d-flex" style="width:859px">
						<div class="form-group w-50 m-2">
							<label asp-for="PlanodeSaude" class="control-label"></label>
							<input asp-for="PlanodeSaude.Nome" class="form-control" readonly style="height:40px;background-color:white" />
							<span asp-validation-for="PlanodeSaude" class="text-danger"></span>
						</div>
						<div class="m-2" style="margin-left:18px">
							<img src="~/img/@Model.PlanodeSaude.img" alt="Imagem da Notícia" style="width: 80px ; height:80px ;border-radius:10px" />
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>

	<form asp-action="Delete" class="d-flex justify-content-center" style="margin:20px; width:1020px;">
		<div class="m-2">
		<input type="hidden" asp-for="PacienteId" />
			<input type="submit" value="Delete" class="btn btn-danger" style="width:200px;" />
		</div>
		<div class="m-2">
			<a asp-action="Index" class="btn btn-primary" style="width:200px;">Back to List</a>
		</div>
	</form>


</div>
