@model Somativa_2.Models.PlanodeSaudeModel

@{
	ViewData["Title"] = "Create";
}

<h1 style="margin:40px;padding-top:40px;" class="d-flex justify-content-center">Você Deseja Criar Essa Pagina</h1>

<div class="row" style="height:410px">

	<form asp-action="Create" enctype="multipart/form-data">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="d-flex m-2" style="width:1150px;">
			<div class="form-group w-50 m-2">
				<label asp-for="Nome" class="control-label"></label>
				<input asp-for="Nome" class="form-control" />
				<span asp-validation-for="Nome" class="text-danger"></span>
			</div>
			<div class="form-group w-50 m-2">
				<label asp-for="Telefone" class="control-label"></label>
				<input asp-for="Telefone" class="form-control" />
				<span asp-validation-for="Telefone" class="text-danger"></span>
			</div>
		</div>
		<div class="d-flex m-2" style="width:1150px;">
			<div class="form-group w-50 m-2">
				<label asp-for="Email" class="control-label"></label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group w-50 m-2">
				<label asp-for="CNPJ" class="control-label"></label>
				<input asp-for="CNPJ" class="form-control" />
				<span asp-validation-for="Telefone" class="text-danger"></span>
			</div>
		</div>
		<div class="d-flex m-2" style="width:1150px;">
			<div class="form-group w-50 m-2">
				<label asp-for="img" class="control-label"></label>
				<input asp-for="img" type="file" class="form-control" name="imgUp" />
				<span asp-validation-for="img" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group d-flex justify-content-center" style="margin:50px">
			<input type="submit" value="Create" class="btn btn-primary w-25 m-2" />
			<a asp-action="Index" class=" btn btn-primary w-25 m-2">Voltar</a>
		</div>
	</form>

</div>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
